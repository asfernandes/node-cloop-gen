{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
            "es5",
            "es2015",
            "es2015.promise"
        ],
        "strictNullChecks": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true
    },
    "include": [
        "./src/lib/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
